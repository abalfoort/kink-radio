#!/bin/bash

PYTHON=$(which python3)
if [ -z "$PYTHON" ]; then
  echo "Cannot find python3 executable - exiting"
  exit 1
fi

mkdir -p "$HOME/.kink-playing"

DEBUG='-OO'; case "$@" in -d|--debug) DEBUG='-Wd'; esac

# Check if GUI is already started
if ! pgrep -f python3.*kink-playing &>/dev/null; then
    python3 ${DEBUG} /usr/lib/kink-playing/main.py $ARGS
fi
